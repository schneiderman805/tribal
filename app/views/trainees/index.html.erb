<p id="notice"><%= notice %></p>

<h1>Trainees</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trainees.each do |trainee| %>
      <tr>
        <td><%= trainee.first_name %></td>
        <td><%= trainee.last_name %></td>
        <td><%= trainee.user_id %></td>
        <td><%= link_to 'Show', trainee %></td>
        <td><%= link_to 'Edit', edit_trainee_path(trainee) %></td>
        <td><%= link_to 'Destroy', trainee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trainee', new_trainee_path %>
